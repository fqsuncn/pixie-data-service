{
  "openapi": "3.0.0",
  "info": {
    "title": "Pixie PxL Executor API",
    "description": "API for running PxL scripts against a Pixie cluster using the Go service.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local server"
    }
  ],
  "paths": {
    "/pixie": {
      "post": {
        "summary": "Execute PxL Script",
        "description": "Run a PxL script on the configured Pixie cluster and return results as JSON.",
        "operationId": "executePixieScript",
        "requestBody": {
          "description": "PxL script to execute",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "script": {
                    "type": "string",
                    "example": "import px\ndf = px.DataFrame(table='http_events', start_time='-1m')\npx.display(df)"
                  }
                },
                "required": ["script"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful execution of PxL script",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "columns": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "rows": {
                      "type": "array",
                      "items": {
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    },
                    "stats": {
                      "type": "object",
                      "additionalProperties": true
                    }
                  }
                },
                "example": {
                  "columns": ["time_", "req_id", "resp_status"],
                  "rows": [
                    ["2025-08-22T05:30:00Z", "1", "200"],
                    ["2025-08-22T05:30:01Z", "2", "500"]
                  ],
                  "stats": {
                    "executionTimeNs": 123456789,
                    "recordsProcessed": 250
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid script or JSON)"
          },
          "401": {
            "description": "Unauthorized (invalid or missing Pixie credentials)"
          },
          "404": {
            "description": "Cluster not found"
          },
          "504": {
            "description": "Timeout connecting to Pixie cluster"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/openapi.json": {
      "get": {
        "summary": "Get OpenAPI Specification",
        "description": "Retrieve this API specification file.",
        "operationId": "getOpenAPISpec",
        "responses": {
          "200": {
            "description": "OpenAPI JSON specification",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "summary": "Swagger UI",
        "description": "Swagger UI for testing the Pixie API.",
        "operationId": "getSwaggerUI",
        "responses": {
          "200": {
            "description": "HTML page with Swagger UI",
            "content": {
              "text/html": {}
            }
          }
        }
      }
    }
  }
}
